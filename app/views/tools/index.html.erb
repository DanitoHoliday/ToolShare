<div class="container">

<h1>All tools</h1>

<div class="container">
  <div class="cards">
    <%@tools.each do |tool| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path tool.photo.key, height: 300, width: 400, crop: :fill%>')">
      <%= link_to tool.name, tool_path(tool)%>
      <%= link_to "Remove", tool_path(tool), method: :delete %>
    </div>
<%end%>
  </div>


<%= link_to "Offer new tool", new_tool_path, :class => "btn btn-green", :method => :get %>

</div>


