<div class="container">

<div class="mt-5">
<%= simple_form_for([@tool]) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, class: 'btn btn-green' %>
<% end %>
</div>

<%= link_to "Go back", tools_path, :class => "btn btn-green mt-5", :method => :get %>

</div>
